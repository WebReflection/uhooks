{
  "name": "uhooks",
  "version": "0.1.11",
  "description": "micro hooks: a minimalistic client/server hooks' implementation",
  "main": "./cjs/index.js",
  "scripts": {
    "build": "npm run cjs && npm run rollup:babel && npm run rollup:es && npm run min && npm run test && npm run size",
    "cjs": "ascjs --no-default esm cjs",
    "rollup:babel": "rollup --config rollup/babel.config.js && sed -i.bck 's/^var /self./' index.js && rm -rf index.js.bck",
    "rollup:es": "rollup --config rollup/es.config.js && sed -i.bck 's/^var /self./' es.js && rm -rf es.js.bck",
    "min": "terser index.js --comments='/^!/' -c -m -o min.js",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "size": "cat min.js | brotli | wc -c && cat es.js | brotli | wc -c",
    "test": "nyc node test/index.js"
  },
  "keywords": [
    "hooks",
    "lightweight",
    "minimal",
    "client",
    "server"
  ],
  "author": "Andrea Giammarchi",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "ascjs": "^4.0.3",
    "coveralls": "^3.1.0",
    "nyc": "^15.1.0",
    "rollup": "^2.35.1",
    "rollup-plugin-includepaths": "^0.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "terser": "^5.5.1"
  },
  "module": "./esm/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./esm/index.js",
      "default": "./cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "unpkg": "min.js",
  "dependencies": {
    "@webreflection/lie": "^0.1.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WebReflection/uhooks.git"
  },
  "bugs": {
    "url": "https://github.com/WebReflection/uhooks/issues"
  },
  "homepage": "https://github.com/WebReflection/uhooks#readme"
}
